<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/submenuColor">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Student Information:"
        android:id="@+id/student_info"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:id="@+id/scrollView"
        android:layout_below="@+id/student_info"
        android:background="@color/submenuWhite"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Content:"
        android:id="@+id/bag_Content"
        android:layout_below="@+id/scrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:background="@color/submenuWhite"
        android:id="@+id/scrollView2"
        android:layout_below="@+id/bag_Content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:background="@color/submenuGreen"
        android:id="@+id/verify_button"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/bag_Content"
        android:layout_toEndOf="@+id/bag_Content" />

</RelativeLayout>